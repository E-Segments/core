{
    "name": "esegments/core",
    "description": "Core utilities, contracts, and concerns for Esegments packages",
    "keywords": [
        "esegments",
        "laravel",
        "core",
        "utilities",
        "contracts"
    ],
    "homepage": "https://github.com/esegments/core",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Esegments",
            "email": "dev@esegments.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-data": "^4.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "suggest": {
        "event4u/data-helpers": "For advanced data manipulation utilities"
    },
    "autoload": {
        "psr-4": {
            "Esegments\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Esegments\\Core\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Esegments\\Core\\CoreServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
